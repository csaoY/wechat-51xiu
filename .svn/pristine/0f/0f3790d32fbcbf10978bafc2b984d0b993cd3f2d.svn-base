<view class="con">
  <view class="model">
    <text class="title">{{plan.faultVO.singleName}}问题</text>
    <view class="hr">
      <view class="hr-left "></view>
    </view>
    <view class="">
      <view class="a1">{{plan.faultVO.name}}</view>
    </view>
  </view>
  <view class="model">
    <text class="title">维修方案</text>
    <view class="hr">
      <view class="hr-left"></view>
    </view>
    <block wx:for="{{plan.planList}}" wx:for-index="idx" wx:key="id" wx:for-item="plan2">
      <view class="box" bindtap="selectItem" data-id="{{plan2.id}}">
        <view wx:if="{{plan2.isSelected==true}}" class="box-title active" data-id="{{plan2.id}}">
          <text>{{plan2.faultPartDetail}}</text>
          <view class="price">￥{{plan2.price}}</view>
          <view class="select"></view>
        </view>
        <view wx:elif="{{plan2.isSelected==false}}" class="box-title" data-id="{{plan2.id}}">
          <text>{{plan2.faultPartDetail}}</text>
          <view class="price">￥{{plan2.price}}</view>
          <view class="select"></view>
        </view>
        <view class="box-content">
          <view class="point">维修方案：{{plan2.plan}}</view>
          <view class="point">{{plan.faultVO.remark}}</view>
        </view>
      </view>
    </block>
  </view>
</view>
<view style="height:110rpx;"></view>
<view class="bot">
  <button bindtap="next" disabled="{{selectedPlanList.length==0}}">下一步</button>
</view>