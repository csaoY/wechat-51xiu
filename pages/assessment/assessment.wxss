.con {
  background: #eee;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  font-family: Microsoft Yahei;
  height: 100%;
}

progress {
  width: 95%;
  margin-left: 26rpx;
  margin-top: 10rpx;
}

.phone-kind {
  text-align: left;
  background: #fff;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 20rpx;
}

.phone-kind>text {
  margin-left: 26rpx;
}

.issue-title {
  font-size: 26rpx;
  margin-left: 30rpx;
  display: inline-block;
  margin-right: 50rpx;
  line-height: 40rpx;
}

.issue {
  margin-top: 20rpx;
}

.issue_list {
  background: #fff;
  padding: 20rpx 0;
  position: relative;
}

.show-issue {
  position: absolute;
  left: 30%;
  font-size: 24rpx;
  line-height: 40rpx;
}

.modify {
  display: inline-block;
  float: right;
  margin-right: 20rpx;
}

.select {
  border: 1px solid #eee;
  display: inline-block;
  width: 40%;
  margin-left: 6%;
  border-radius: 5px;
  margin-top: 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #333;
  font-size: 26rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}

.slect-active {
  border: 1px solid #ff9d00;
  display: inline-block;
  width: 40%;
  margin-left: 6%;
  border-radius: 5px;
  margin-top: 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #ff9d00;
  font-size: 26rpx;
}

.bot {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 16rpx 0;
  border-top: 1px solid #eee;
  background: white;
}

.bot>button {
  width: 97%;
  background: #ff9d00;
  color: #fff;
}

.bot>button:disabled {
  background: #eee;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  background: #d3d3d3;
  color: white;
  border-radius: 4rpx;
  display: inline-block;
  text-align: center;
  line-height: 40rpx;
  margin-right: 20rpx;
}

.icon1 {
  background: #ff9d00;
}

.icon2 {
  background: #ff8d43;
}

.icon3 {
  background: #ffb586;
}
