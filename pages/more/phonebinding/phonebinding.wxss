/* pages/more/phonebinding/phonebinding.wxss */

.con {
  background: white;
  width: 100%;
  padding: 20rpx 0;
}

.yzm {
  width: 90%;
  margin: 0 auto 20rpx;
  height: 100rpx;
  position: relative;
}

.yamn {
  width: 100%;
  height: 100rpx;
  border: 1px solid #eee;
}

.a {
  position: absolute;
  right: 10rpx;
  top: 0;
  font-size: 24rpx;
  color: #ff9d00;
  height: 100rpx;
  line-height: 100rpx;
}

.bot {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 10rpx 0;
  border-top: 1px solid #eee;
  background: white;
}

.bot>button {
  width: 97%;
  background: #ff9d00;
  color: #fff;
}
